<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSettingsActivity"
    android:orientation="vertical"
    android:padding="20sp"
    android:id="@+id/guiderInfo">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/guiderProfileImage"
        android:layout_width="120sp"
        android:layout_height="120sp"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        app:civ_border_color="#FF000000"
        android:src="@mipmap/user"/>

    <EditText
        android:id="@+id/custname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Name"
        android:layout_marginBottom="10sp"/>

    <EditText
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Car Used"
        android:layout_marginBottom="10sp"/>

    <EditText
        android:id="@+id/guiderphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Phone"
        android:layout_marginBottom="10sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/custourPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Period of How Long they book"
        android:inputType="datetime"/>

    <EditText
        android:id="@+id/packageProvide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Package"

        />

    <EditText
        android:id="@+id/tourPlanedProvide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tour Plan"/>


    <EditText
        android:id="@+id/tourPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tour Price"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:text="Confirm"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="Back"/>
</LinearLayout>